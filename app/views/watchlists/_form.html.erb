<%= form_with(model: watchlist) do |form| %>
  <% if watchlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(watchlist.errors.count, "error") %> prohibited this watchlist from being saved:</h2>

      <ul>
        <% watchlist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :list_name %>
    <%= form.text_field :list_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= form_for([@watchlist, @watchlist.items.build]) do |f| %>
    <%= f.text_field :title, placeholder: "Title" %>
    <%= f.text_field :year, placeholder: "Year" %>
    <%= f.text_field :genre, placeholder: "Genre" %>
    <%= f.submit %>
  <% end %>
<% end %>
